class Scone {
  function topping(first, second) {
    System.println("scone with " + first + " and " + second);
  }
}

let scone = Scone();
scone.topping("berries", "cream");

class CoffeeMaker {
  function __init__(coffee) {
    this.coffee = coffee;
  }

  function brew() {
    System.println("Enjoy your cup of " + this.coffee);

    this.coffee = nil;
  }
}

let maker = CoffeeMaker("coffee and chicory");
maker.brew();

class CoffeeMakerButBetter : CoffeeMaker {
  function better() {
    System.println("I'm just better");
  }
}

CoffeeMakerButBetter.better();
